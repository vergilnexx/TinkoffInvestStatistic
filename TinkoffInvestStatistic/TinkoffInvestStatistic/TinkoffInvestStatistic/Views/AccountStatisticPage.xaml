<?xml version="1.0" encoding="utf-8" ?>
<tis:BaseTabbedDataPage xmlns="http://xamarin.com/schemas/2014/forms"
                         xmlns:tis="clr-namespace:TinkoffInvestStatistic.Views.Base;assembly=TinkoffInvestStatistic"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         Title="{Binding Title}"
                         x:Class="TinkoffInvestStatistic.Views.AccountStatisticPage"
                         xmlns:local="clr-namespace:TinkoffInvestStatistic.Views;assembly=TinkoffInvestStatistic"
                        BarBackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor}, Dark={StaticResource DarkPrimaryColor}}">
    <TabbedPage.Children x:DataType="local:AccountStatisticViewModel">
        <local:PositionTypesPage Title="Инструменты" BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor}, Dark={StaticResource DarkPrimaryColor}}"/>
        <local:CurrencyPage Title="Валюты" BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor}, Dark={StaticResource DarkPrimaryColor}}"/>
    </TabbedPage.Children>
</tis:BaseTabbedDataPage>